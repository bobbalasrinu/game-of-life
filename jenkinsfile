pipeline
{
    agent { label 'OPENJDK-MVN'}
    parameters {
        choice(name: 'BRANCH_TO_BUILD', choices: ['master', 'main'], description: 'Branch to build')
        string(name: 'MAVEN_GOAL', defaultValue: 'package', description: 'maven goal')
    }
    stages {
        stage('test')
        {
            steps {
                echo "myfirst job"
            }
        }
        stage ('vcs')
        {
            steps {
                git branch: "${params.BRANCH_TO_BUILD}", url:'https://github.com/bobbalasrinu/game-of-life.git'

            }
        }
        stage ('path')
        {
            steps {
                sh 'export PATH="/usr/lib/jvm/java-8-openjdk-amd64/bin:$PATH"'
            }
        }
        stage ('build')
        {
            steps {
               sh "/usr/share/maven/bin/mvn ${params.MAVEN_GOAL}"
            }
        }
        stage('archive results') {
            steps {
                junit '**/surefire-reports/*.xml'
            }
        }
    }
}